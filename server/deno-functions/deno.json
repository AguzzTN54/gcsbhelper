{
  "deno.enable": true,
  "deno.lint": true,
  "deno.unstable": true,
  "tasks": {
    "start": "deno run --unstable-kv --allow-env --env-file --allow-net --unstable-cron src/index.ts",
    "build": "deno run -A https://deno.land/x/esbuild@v0.19.11/mod.js src/index.ts --bundle --minify --outfile=dist/deploy.js --format=esm --platform=neutral --external:npm:hono --external:npm:jsdom"
  },
  "deno.suggest.imports.hosts": {
    "https://deno.land": true,
    "https://esm.sh": true,
    "https://crux.land": true
  }
}

